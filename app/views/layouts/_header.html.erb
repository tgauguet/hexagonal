<header>
  <nav class="navbar navbar-expand-lg">
    <div class="navbar-brand"><%= image_pack_tag "logo-white.png", class: "header-logo" %> HexaGoWorking</div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to root_path, class: "nav-link" do %>
            <%= signed_in? ? 'Dashboard' : 'Home' %>
          <% end %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Rooms', rooms_path, class: "nav-link" %>
        </li>
        <% if signed_in? %>
          <li class="nav-item active">
            <%= link_to "Waiting list", waiting_list_path, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item">
          <% if !signed_in? %>
            <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
          <% else %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
          <% end %>
        </li>
        <li class="nav-item">
          <% if !signed_in? %>
            <%= link_to "BOOK A PLACE!", new_user_registration_path, class: "nav-link" %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
