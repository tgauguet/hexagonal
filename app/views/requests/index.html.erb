<div class="list-cntnr">
  <div class="title">
    <h1>Waiting list</h1>
  </div>
  <div class="lists-cntnr">
    <div>
      <h2 class="bg-info">Confirmed</h2>
      <i>Requests waiting to be included in the list</i>
      <ul>
        <% @confirmed.each do |request| %>
          <li><%= request.user.name %></li>
        <% end %>
      </ul>
    </div>
    <div>
      <h2 class="bg-success">Accepted</h2>
      <i>Requests that are accepted</i>
      <ul>
        <% @accepted.each do |request| %>
          <li><%= request.user.name %></li>
        <% end %>
      </ul>
    </div>
    <div>
      <h2 class="bg-warning">Unconfirmed</h2>
      <i>Requests whose user has not confirmed his email</i>
      <ul>
        <% @pending.each do |request| %>
          <li><%= request.user.name %></li>
        <% end %>
      </ul>
    </div>
    <div>
      <h2 class="bg-secondary">Expired</h2>
      <i>Requests that will never be included in the list</i>
      <ul>
        <% @expired.each do |request| %>
          <li><%= request.user.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
