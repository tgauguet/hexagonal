<div class="room-cntnr">
  <div class="filters">
    <%= form_with model: @booking do |f| %>
    <%#= form_with url: '/filter-rooms' do |f| %>
      <div class="datepicker">
        <span class="input-group-addon">FROM</span>
        <%= f.text_field(:start , class: "dateinput input-sm form-control", id: "datepicker", onchange: 'enableEndDate()') %>
        <span class="input-group-addon">TO</span>
        <%#= f.text_field(:end , class: "dateinput input-sm form-control", id: "datepicker",onchange: 'this.form.submit()', disabled: true) %>
        <%= f.text_field(:end , class: "dateinput input-sm form-control", id: "datepicker", disabled: true) %>
      </div>
      <div class="fake-btn">📆 Check dates</div>
    <%# end %>
  </div>
  <div class="rooms-cntnr">
    <%#= form_with model: @booking do |f| %>
      <div id="form-cta">
        <%= f.hidden_field :status, value: "accepted" %>
        <p><i>Once your room selection is finished, click here </i>👉
        <%= f.button :submit, class: "btn" do %>BOOK <span id='room-count'></span> ROOM<span id='room-plural'></span> !<% end %>
        </p>
      </div>

      <% @rooms.each do |room| %>

        <div class="single-room">
          <%= f.check_box("room_ids[#{room.id}]", id: "booking_#{room.id}", onchange: 'showFormBtn()') %>
          <%= f.label "#{room.id}" %>
          <%= image_tag "https://picsum.photos/600/300?grayscale&random=#{room.id}" %>
          <h3><%= room.name %></h3>
          <p>📏 <%= room.superficy %> m2</p>
          <p>💵 <%= room.price %>€</p>
          <p>👩🏻‍💻 <%= room.capacity %></p>
        </div>
      <% end %>

    <% end %>
  </div>
</div>
