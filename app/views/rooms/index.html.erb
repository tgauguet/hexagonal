<div class="room-cntnr">
  <div class="filters">
    <%= form_with model: @booking do |f| %>
      <div class="datepicker">
        <span class="input-group-addon">FROM</span>
        <%= f.text_field(:start , class: "dateinput input-sm form-control start", id: "datepicker", onchange: 'enableEndDate()') %>
        <span class="input-group-addon">TO</span>
        <%= f.text_field(:end_day , class: "dateinput input-sm form-control end", onchange: "reloadRooms()", id: "datepicker") %>
      </div>
      <div class="fake-btn">ðŸ“† Check availabilities</div>
    </div>

    <div class="rooms-cntnr">

      <div id="form-cta">
        <%= f.hidden_field :status, value: "accepted" %>
        <p><i>Once your room selection is finished, click here </i>ðŸ‘‰
        <%= f.button :submit, class: "btn" do %>BOOK <span id='room-count'></span> ROOM<span id='room-plural'></span> !<% end %>
        </p>
      </div>
      
      <div id="rooms">
        <%= render @rooms, f: f %>
      </div>

    <% end %>
  </div>
</div>
